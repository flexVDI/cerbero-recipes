class Recipe(recipe.Recipe):
    name = 'atk'
    version = '2.16.0'
    licenses = [License.LGPLv2Plus]
    deps = ['glib']

    stype = SourceType.TARBALL
    #url = 'http://ftp.acc.umu.se/pub/GNOME/sources/atk/2.16/atk-%(version)s.tar.xz'
    url = 'gnome://'
    tarball_checksum = '095f986060a6a0b22eb15eef84ae9f14a1cf8082488faa6886d94c37438ae562'
    autoreconf = True

    files_libs = ['libatk-1.0']
    files_devel = ['lib/pkgconfig/atk.pc', 'include/atk-1.0']
    files_lang = ['atk10']
    files_typelibs = ['Atk-1.0']

    def prepare(self):
        if self.config.target_platform != Platform.LINUX:
            self.configure_options = ' --disable-gtk-doc'
